        @media (max-width: 768px) {
            .sidebar-toggle {
                display: block;
                position: fixed;
                top: 1rem;
                left: 1rem;
                z-index: 9999;
            }
            .sidebar {
                width: 90%; /* Expand sidebar to 90% on smaller screens */
