    <script>
        $(document).ready(function() {
            function isSidebarHidden() {
                // Check if the sidebar element is hidden
                return $('.sidebar').hasClass('hidden');
            }
    
            // Example usage
            $('#sidebar-toggle').click(function() {
                // Toggle the hidden class on the sidebar
                $('.sidebar').toggleClass('hidden');
                $('#sidebar-toggle').toggleClass('text-white');
                // Update the card width based on sidebar visibility
                updateCardWidth();
            });
    
            // Update the card width based on sidebar visibility
            function updateCardWidth() {
                // Get the card elements
                var cards = $('.card');
                // Check if the sidebar is hidden
                if (isSidebarHidden()) {
                    // Adjust card width when sidebar is hidden
                    cards.addClass('w-[48%] sm:w-[65%] md:w-[60%] lg:w-[50%]');
                    cards.removeClass('w-[80%] sm:w-[45%] md:w-[30%] lg:w-[24%]');
                } else {
                    // Reset card width when sidebar is visible
                    cards.addClass('w-[80%] sm:w-[45%] md:w-[30%] lg:w-[24%]');
                    cards.removeClass('w-[48%] sm:w-[65%] md:w-[60%] lg:w-[50%]');
                }
            }
            
            // Call updateCardWidth function on page load
            updateCardWidth();
        });
    </script>
    
