<%- include ('partials/adminHeader') -%>

<main>
    <div class="border border-gray-300 rounded-lg p-4 m-4 shadow-md bg-white mt-10">
    <form action="/admin/edit/<%= shoe._id %>" method="post">
        <!-- Include input fields for editing reservation details -->
        <label for="image">Image URL:</label>
        <input class="mt-4 border-gray-300 border-2" type="text" id="image" name="image" value="<%= shoe.image %>" required> <br>

        <label for="name">Shoe Name:</label>
        <input class="mt-4 border-gray-300 border-2" type="text" id="name" name="name" value="<%= shoe.name %>" required> <br>

        <label for="price">Price:</label>
        <input class="mt-4 border-gray-300 border-2" type="number" id="price" name="price" value="<%= shoe.price %>" required> <br>

        <label for="category">Category:</label>
        <input class="mt-4 border-gray-300 border-2" type="text" id="category" name="category" value="<%= shoe.category %>" required> <br>
    
        <!-- Submit button for editing -->
        <button style="background-color: green; color: white; padding: 10px; 
        border: none; border-radius: 10px; cursor: pointer; margin-top: 15px;" type="submit">Save Changes</button>
    </form>
</div>
  
</main>